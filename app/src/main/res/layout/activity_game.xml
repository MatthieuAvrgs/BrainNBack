<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beige"
    tools:context=".GameActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.49">

        <LinearLayout
            android:id="@+id/layout_grille"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            android:background="@color/beige"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="45dp">

            <GridLayout
                android:id="@+id/gridLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="3"

                android:useDefaultMargins="true"

                tools:context=".GridXMLActivity"
                tools:layout_editor_absoluteX="24dp"
                tools:layout_editor_absoluteY="66dp">

                <View
                    android:id="@+id/carre1"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@color/white" />

                <View
                    android:id="@+id/carre2"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@color/white" />

                <View
                    android:id="@+id/carre3"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@color/white" />

                <View
                    android:id="@+id/carre4"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@color/white" />

                <View
                    android:id="@+id/carre5"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@color/white" />

                <View
                    android:id="@+id/carre6"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@color/white" />

                <View
                    android:id="@+id/carre7"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@color/white" />

                <View
                    android:id="@+id/carre8"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@color/marron" />

                <View
                    android:id="@+id/carre9"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@color/white" />


            </GridLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_boutons"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="357dp">

            <Button
                android:id="@+id/son"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="Son" />

            <Button
                android:id="@+id/position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="Position" />
        </LinearLayout>

    </LinearLayout>

